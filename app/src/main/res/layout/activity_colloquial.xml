<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <EditText
        android:id="@+id/colSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Search / بحث"
        android:drawableRight="@drawable/search_lens"/>


    <ListView
    android:id="@+id/colloquialRoot"
    android:layout_width="match_parent"
    android:background="@drawable/grad_inside"
    android:layout_height="match_parent"
        android:layout_weight="1"
    tools:context="com.example.mohammedal.learnarabic.ColloquialActivity">


    </ListView>
    <com.google.android.gms.ads.AdView

        android:id="@+id/adViewColloquial"
        android:layout_marginTop="1dp"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7772027303156049/7826400232" />
</LinearLayout>