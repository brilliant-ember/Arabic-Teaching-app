<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/phrSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/search_lens"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Search / بحث"/>
    <ListView
        android:id="@+id/phrasesRoot"

    android:layout_width="match_parent"
    android:background="@drawable/grad_inside"
    android:layout_height="match_parent"
        android:layout_weight="1"
    tools:context="com.example.mohammedal.learnarabic.PhrasesActivity">
    </ListView>
    <com.google.android.gms.ads.AdView

        android:id="@+id/adViewPhrases"
        android:layout_marginTop="1dp"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7772027303156049/9251286252" />
</LinearLayout>
