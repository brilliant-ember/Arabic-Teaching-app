        android:id="@+id/adViewMain"
        android:paddingTop="2dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7772027303156049/6800382736" />
</LinearLayout>